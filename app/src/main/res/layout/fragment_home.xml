<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.fragment.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:gravity="center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/animation_blue">

            <TextView
                android:id="@+id/textGreeting"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."/>


            <TextView
                android:id="@+id/textName"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeTextType="uniform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading.."/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/textQuote"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="12sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Account Info"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#6FFFFE">

                <RelativeLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_card_saved"/>

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/image"
                        android:layout_toStartOf="@id/textTotalCardSaved"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card Saved"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#045E66"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textAwesomeCards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#045E66"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:id="@+id/textTotalCardSaved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#045E66"
                        android:textSize="24sp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#C5E1A5">

                <RelativeLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_card_saved"/>

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/image2"
                        android:layout_toStartOf="@id/textTotalTransaction"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Transaction"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/darkGreen"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textAwesomeTransaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#045E66"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginEnd="10dp"
                        android:id="@+id/textTotalTransaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#045E66"
                        android:textSize="24sp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Actions"/>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/cardReportBugs"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FFB3A6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="18sp"
                        android:textColor="#AF7166"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report Bugs"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/cardOpenTickets"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FEEA83">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="18sp"
                        android:textColor="#A0934B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Tickets"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>