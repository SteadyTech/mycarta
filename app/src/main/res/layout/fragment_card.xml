<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrayPrimary"
    android:orientation="vertical"
    tools:context=".v1.home.fragment.card.CardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginStart="-48dp"
                android:layout_marginTop="-48dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="48dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_radius_bottom_end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical"
                        android:padding="18dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/work_sans_semibold"
                            android:text="Cards"
                            android:textColor="@color/white"
                            android:textSize="32sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="12dp">

                            <RelativeLayout
                                android:id="@+id/backgroundCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#fff"
                                android:padding="12dp">

                                <ImageView
                                    android:id="@+id/imageType"
                                    android:layout_width="42dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/ic_card" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/hintCardNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/lato_light"
                                            android:text="Card Number"
                                            android:textAllCaps="true"
                                            android:textColor="@color/textColorPrimary"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:id="@+id/textCardNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_bold"
                                            android:text="4520 9573 3843 8347"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/hintCvv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/lato_light"
                                            android:text="cvv"
                                            android:textAllCaps="true"
                                            android:textColor="@color/textColorPrimary"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:id="@+id/textCardCvv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_bold"
                                            android:text="112"
                                            android:textAllCaps="true"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/hintCardName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/lato_light"
                                            android:text="Cardholder Name"
                                            android:textAllCaps="true"
                                            android:textColor="@color/textColorPrimary"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:id="@+id/textCardName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/poppins_bold"
                                            android:maxLines="25"
                                            android:text="My Carta"
                                            android:textAllCaps="true"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/hintExpiry"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/lato_light"
                                            android:text="Expiry"
                                            android:textAllCaps="true"
                                            android:textColor="@color/textColorPrimary"
                                            android:textSize="10sp" />

                                        <TextView
                                            android:id="@+id/textExpiry"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_bold"
                                            android:text="12/21"
                                            android:textAllCaps="true"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/linearSelectCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="@string/please_select_card"
                                    android:textAlignment="center"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/buttonPay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_semi_black"
                                android:drawableStart="@drawable/ic_debit_card"
                                android:drawablePadding="12dp"
                                android:text="Pay"
                                android:textAllCaps="false"
                                android:textColor="@color/buttonPay"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/buttonEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_semi_black"
                                android:drawableStart="@drawable/ic_edit"
                                android:drawablePadding="12dp"
                                android:text="Edit"
                                android:textAllCaps="false"
                                android:textColor="@color/buttonEdit"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/buttonDelete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_semi_black"
                                android:drawableStart="@drawable/ic_delete"
                                android:drawablePadding="12dp"
                                android:maxLines="1"
                                android:text="Erase"
                                android:textAllCaps="false"
                                android:textColor="@color/buttonDelete"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/poppins_bold"
                android:paddingStart="8dp"
                android:text="Card Settings"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHiddenInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_protected_credit_card" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="12sp"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/work_sans_semibold"
                                android:maxLines="2"
                                android:text="Hidden\nInformation"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSwitcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_more_card" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="12sp"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/work_sans_semibold"
                                android:maxLines="2"
                                android:text="Card\nSwitcher"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="tap_here.json"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAddNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_add_card" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="12sp"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/work_sans_semibold"
                                android:maxLines="2"
                                android:text="Add\nNew cards"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>