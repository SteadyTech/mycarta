<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".home.fragment.card.view.CardPayActivity">

    <ImageView
        android:padding="2dp"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/imageBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_gray" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/textBarcode"
                android:text="Barcode"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"/>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/expandableBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ael_expanded="true"
                android:orientation="vertical">

                <ImageView
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher"
                    android:id="@+id/imageNumberCardBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cardholder Number"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"/>

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/textQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:foreground="?attr/selectableItemBackground"
                android:padding="4dp"
                android:text="QR Code" />

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/expandableQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageNumberCardQR"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:gravity="end"
                    android:text="Cardholder Number" />

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>